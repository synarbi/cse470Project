<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".View.DetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/mainBackground"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/mainBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Let's Go"
                android:textColor="@color/colorActivityBackground"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:visibility="gone"
        android:id="@+id/button2"
        android:layout_width="271dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/switch_btn_bg"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Around You"
        android:textAllCaps="false"
        android:textColor="@color/mainBackground"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button"
        android:layout_width="271dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/switch_btn_bg"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Tourist Spot"
        android:textAllCaps="false"
        android:textColor="@color/mainBackground"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="271dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/switch_btn_bg"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Hotels"
        android:textAllCaps="false"
        android:textColor="@color/mainBackground"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button8"
        android:layout_width="271dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/switch_btn_bg"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Book Transport"
        android:textAllCaps="false"
        android:textColor="@color/mainBackground"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:visibility="gone"
        android:id="@+id/hotels"
        android:layout_width="271dp"
        android:layout_height="57dp"
        android:background="@drawable/switch_btn_bg"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="About"
        android:textAllCaps="false"
        android:textColor="@color/mainBackground"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:layout_constraintVertical_bias="0.311" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/braclogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>